<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.singorenko.miofondo">

    <uses-permission android:name="android.permission.SET_WALLPAPER"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".view.LicenseActivity"
        android:parentActivityName=".view.MainActivity">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".view.MainActivity"/>
        </activity>
        <activity
                android:name=".view.SelectedImageActivity"
                android:launchMode="singleInstance"
                android:parentActivityName=".view.GridSelectedCategoryActivity">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".view.GridSelectedCategoryActivity"/>
        </activity>
        <activity
                android:name=".view.GridSelectedCategoryActivity"
                android:parentActivityName=".view.MainActivity"
        android:launchMode="singleInstance">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".view.MainActivity"/>
        </activity>
        <activity android:name=".view.MainActivity"
        android:launchMode="singleInstance">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <meta-data
                android:name="com.google.android.gms.ads.APPLICATION_ID"
                android:value="@string/admob_app_id"/>
    </application>

</manifest>